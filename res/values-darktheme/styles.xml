<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.SettingsBase" parent="@android:style/Theme.Material">
        <item name="android:textColor">@color/midnight_white</item>
		<item name="android:colorPrimary">@color/midnight_primary</item>
        <item name="android:colorPrimaryDark">@color/midnight_primary</item>
        <item name="android:colorAccent">@color/midnight_theme</item>
		<item name="android:colorBackground">@color/midnight_primary</item>
		<item name="android:statusBarColor">@color/pb_sb</item>
		<item name="android:actionBarStyle">@style/Theme.ActionBar</item>
		<item name="android:textColorPrimary">@color/midnight_white</item>
		<item name="android:textColorSecondary">@color/midnight_text</item>
        <item name="android:alertDialogTheme">@style/Theme.AlertDialog</item>
		<item name="android:colorControlHighlight">@color/midnight_theme</item>
		<item name="android:colorControlNormal">@color/midnight_theme</item>
		<item name="android:windowBackground">@color/midnight_primary</item>
	</style>
	    <style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:colorBackground">@color/midnight_primary</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:actionBarStyle">@style/Theme.ActionBar</item>
        <item name="android:colorPrimary">@color/midnight_secondary</item>
        <item name="android:colorPrimaryDark">@color/midnight_primary</item>
        <item name="android:colorAccent">@color/midnight_theme</item>
	</style>
	<style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar">
		<item name="android:background">@color/pb_ab</item>
		<item name="colorPrimary">@color/pb_ab</item>		
    </style>
	<!-- About phone and Status windows, do not remove SubSettingsDialogWhenLarge as parent has been changed-->
		<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" />
		<style name="Theme.DialogWhenLarge" parent="@style/Theme.SettingsBase">
			<item name="android:statusBarColor">@color/midnight_primary</item>
		</style>
	<style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge">
		<item name="android:colorPrimary">@color/midnight_secondary</item>
		<item name="android:colorPrimaryDark">@color/midnight_primary</item>
		<item name="android:colorAccent">@color/midnight_theme</item>
		<item name="android:actionBarStyle">@style/Theme.ActionBar</item>		
    </style>
	<style name="wifi_item_label">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="wifi_item_content">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="wifi_item_edit_content">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
	<style name="bt_item">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="bt_item_label">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
    <style name="bt_item_edit_content">
		<item name="android:textColor">@color/midnight_white</item>
    </style>
	
</resources>
